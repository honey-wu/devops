[Unit]
Description=Apache kafka-zookeeper server (Kafka)
Documentation=http://zookeeper.apache.org
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
User=kafka
Group=kafka
#Environment=JAVA_HOME=/usr/local/java
ExecStart={{ kafka_binary_install_dir }}/kafka/bin/zookeeper-server-start.sh {{ kafka_binary_install_dir }}/kafka/config/zookeeper.properties
ExecStop={{ kafka_binary_install_dir }}/kafka/bin/zookeeper-server-stop.sh

[Install]
WantedBy=multi-user.target
